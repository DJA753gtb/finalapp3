<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>


  <body>

    <%- include('./partials/nav.ejs') %>


    <div class=" container">
      <div class="jumbotron">

        <h2 class=" text-center text-uppercase col-md-9 mx-auto " style="font-family: cursive; " ;>edit blog
        </h2>


        <div class="row">
          <div class="col-md-8 bg-info mx-auto">

          

            <form >
              <div class="form-group" style="font-family: Georgia, 'Times New Roman', Times, serif">
                <label for="exampleInputEmail1">Blog Headline</label>
                <input type="text" class="form-control" id= "example1"
                  aria-describedby="emailHelp">                                                          

              </div>

              <div class="form-group" style="font-family: Georgia, 'Times New Roman', Times, serif;">
                <label for="exampleFormControlTextarea1">Blog Content</label>
                <textarea class="form-control" id="example3"
                  rows="3"></textarea>
              </div>
              <div class="form-group" style="font-family: Georgia, 'Times New Roman', Times, serif;">
                <label for="exampleInputPassword1">Author Name</label>
                <input  type="text" class="form-control" id="example2">
              </div>

              <button type="submit" class="btn btn-outline-primary mb-4"  > Save Changes</button>

              
            </form>

          </div>


        </div>
      </div>


    </div>

    <script>
      document.getElementById("example1").value = "<%= blog.heading %>"
      document.getElementById("example2").value = "<%= blog.author  %>"
      document.getElementById("example3").value = "<%= blog.body  %>"
    </script>

   
 <script >

  const  editBtn = (event) =>{

    event.preventDefault();
    console.log(event.target);

    const id = event.target.id;

